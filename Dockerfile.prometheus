FROM prom/prometheus:v2.51.2

# Copy Prometheus config (use static for now, will switch to dynamic later)
COPY infra/monitoring/prometheus-static.yml /etc/prometheus/prometheus.yml

# Start Prometheus directly - simple and works
CMD ["/bin/prometheus", "--config.file=/etc/prometheus/prometheus.yml", "--storage.tsdb.path=/prometheus", "--web.listen-address=0.0.0.0:9090", "--web.enable-lifecycle"]
