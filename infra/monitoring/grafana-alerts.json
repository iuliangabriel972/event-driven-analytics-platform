{
  "alerts": [
    {
      "name": "High Response Time",
      "condition": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket[5m])) > 1",
      "message": "Response time p95 exceeds 1 second",
      "severity": "warning"
    },
    {
      "name": "High Error Rate",
      "condition": "rate(http_requests_total{status=~\"5..\"}[5m]) > 0.1",
      "message": "Error rate exceeds 10%",
      "severity": "critical"
    },
    {
      "name": "Service Down",
      "condition": "up == 0",
      "message": "Service is down",
      "severity": "critical"
    },
    {
      "name": "No Events Processed",
      "condition": "rate(consumer_messages_processed_total[5m]) == 0",
      "message": "No messages processed in the last 5 minutes",
      "severity": "warning"
    },
    {
      "name": "High Processing Latency",
      "condition": "histogram_quantile(0.95, rate(consumer_message_processing_seconds_bucket[5m])) > 5",
      "message": "Message processing latency exceeds 5 seconds",
      "severity": "warning"
    }
  ]
}

